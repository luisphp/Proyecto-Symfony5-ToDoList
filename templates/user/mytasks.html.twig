{% extends 'base.html.twig' %}

{% block title %}Mis Tareas{% endblock %}

{% block body %}
{% if tasks|length >= 1 %}
<div class="container">
        <div class="example-wrapper">
        <h1>Todas mis tareas</h1>
        <br>
        <table class="table table-hover">
            <thead>
                <tr>
                <th scope="col">id</th>
                <th scope="col">Title</th>
                <th scope="col">Prioridad</th>
                <th scope="col">Horas</th>
                <th scope="col">Acciones</th>
                {# <th scope="col">created at</th> #}
                </tr>
            </thead>
            <tbody>    
                    {% for task in tasks %}
                    <tr>
                        <th scope="row">{{ task.id }}</th>
                        <td>{{ task.title }}</td>
                        <td>{{ task.priority }}</td>
                        <td>{{ task.hours }}</td>
                        <td>
                        <a name="ver" id="ver" class="btn btn-sm btn-primary" href="{{path('task_detail',{'id':task.id})}}" role="button">Ver</a>
                        <a name="edit" id="edit" class="btn btn-sm btn-secondary" href="{{path('task_edit',{'id':task.id})}}" role="button">Edit</a>
                        <a name="delete" id="delete" class="btn btn-sm btn-warning" href="{{path('task_delete',{'id':task.id})}}" role="button">Delete</a>
                        </td>
                        </tr>
                    {% endfor %}
            </tbody>
            </table>

</div>




</div>

{% else %}

    <div class="container">
        <h3>No se han cargado tareas</h3>
    </div>

{% endif %}
{% endblock %}