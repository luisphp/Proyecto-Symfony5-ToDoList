{% extends 'base.html.twig' %} {% block title %} {% endblock %} {% block body %}

<div class="container">
    <h1>Login de usuarios </h1>
    {% if error %}
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        {{error.messagekey }}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
    </div>
    {% endif %}
    <br>
    <br>
    <div class="col-md-12">
        <div class="col-md-6 ">
            <form action="{{path('login')}}" method="POST">
                <div class="form-group">
                    <div class="col-md-12 row">
                        <!-- <label for="username" id="isername">Nombre</label> -->
                        <input type="email" class="form-control col-md-6" id="username" name="_username" placeholder="e-mail" value="{{last_username}}">
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-12 row">
                        <input type="password" class="form-control col-md-6" id="password" name="_password" placeholder="Password">
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Entrar</button>
            </form>
        </div>
    </div>

</div>
{% endblock %}